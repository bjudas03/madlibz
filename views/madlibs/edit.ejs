<h1>Edit</h1>

<form action="/madlibs/<%= madlib.id %>" method="POST" id="edit-form" role="form">
  <div class="form-group">
    <label for="title">TITLE</label>
    <input type="text" class="form-control" id="title" placeholder="TITLE" name="title" value="<%= madlib.title %>">
  </div>
  <div class="form-group">
    <label for="body">BODY</label>
    <textarea rows="20" class="form-control" id="body" placeholder="BODY" name="body" value="<%= madlib.body %>"></textarea>
  </div>

  <button id="edit-button" type="submit" class="btn btn-primary">Submit</button>
</form>


<a href="/profile">&larr; Back</a>

<script src="https://code.jquery.com/jquery.js"></script>

<script>
	$('#edit-form').submit(function(e) {
    e.preventDefault();
    var url = $(this).attr('action');
    var data = $(this).serialize();

    $.ajax({
      url: url,
      method: 'PUT',
      data: data
    }).done(function(data) {
    	// console.log("ajax call is finished" , "--------------------------");
      window.location.href = '/madlibs/<%= madlib.id %>';
    });
  });

</script>
