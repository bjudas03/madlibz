<h1>Edit</h1>

<form action="/madlibs/<%= madlib.id %>" method="PUT" class="edit-form" role="form">
  <div class="form-group">
    <label for="title">TITLE</label>
    <input type="text" class="form-control" id="title" placeholder="TITLE" name="title" value="<%= madlib.title %>">
  </div>
  <div class="form-group">
    <label for="body">BODY</label>
    <textarea rows="20" class="form-control" id="body" placeholder="BODY" name="body" value="<%= madlib.body %>"></textarea>
  </div>

  <button id="edit-button" type="submit" class="btn btn-primary">Submit</button>
</form>


<a href="/profile">&larr; Back</a>


<script>
	
	$('#edit-button').on('click', function(e) {
  	console.log("I'm in the button");
    e.preventDefault();
    var url = $(this).attr('action');
    var data = $(this).serialize();

    $.ajax({
      url: url,
      method: 'PUT',
      data: data
    }).done(function(data) {
    	console.log(data, "--------------------------");
      window.location.href = '/madlibs/:id';
    });
  });

</script>
